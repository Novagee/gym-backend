<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jy.domain.Event">

  <resultMap id="BaseResultMap" type="com.jy.domain.Event">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="title" jdbcType="VARCHAR" property="title" />
    <result column="description" jdbcType="VARCHAR" property="description" />
    <result column="starttime" jdbcType="TIMESTAMP" property="starttime" />
    <result column="endtime" jdbcType="TIMESTAMP" property="endtime" />
    <result column="pic" jdbcType="VARCHAR" property="pic" />
    <result column="isActive" jdbcType="BIT" property="isActive" />
  </resultMap>
  
  <sql id="Base_Column_List">
    id, title, description, starttime, endtime, pic, isActive
  </sql>
  
  <select id="getById" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from event
    where id = #{id,jdbcType=BIGINT}
  </select>
  
  <select id="getAllEvents" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from event
  </select>
  
  <insert id="create" parameterType="com.jy.domain.Event" useGeneratedKeys="true" keyProperty="id">
    insert into event (id, title, description, starttime, endtime, pic, isActive)
    values (
    	#{id,jdbcType=BIGINT}, #{title,jdbcType=VARCHAR}, #{description,jdbcType=VARCHAR}, 
   		#{starttime,jdbcType=TIMESTAMP}, #{endtime,jdbcType=TIMESTAMP},
   		#{pic,jdbcType=VARCHAR}, #{isActive,jdbcType=BIT})
  </insert>

</mapper>